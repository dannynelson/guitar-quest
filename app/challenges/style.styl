.guitar-quest-challenges
  .guitar-background
    margin-top -23px
    margin-bottom -23px
    // background-position: 0% 25%
    background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url("/guitar_5.jpg")
    background-size: cover
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover
    background-repeat: no-repeat
    // height 640px
    height 350px
    border-bottom 2px solid #C6C6C6
    width: 100%

  // background-position: center top
  .challenge-panel
    padding-top 10px
    padding-bottom 10px
    border 2px solid #FF9800

  .challenge-title
    font-size 20px // same size as piece title on pieces page

  .challenge-panel-body
    padding 10px 20px

  .reward
    margin-top 20px
    margin-bottom 17px

    .reward-credits-icon
      font-size 65px

    .reward-points-icon
      font-size 50px
      margin-bottom 7px

    .reward-text
      font-size 16px
      font-weight bold
      margin-top -8px

  .description
    line-height 18px
    font-size 14px
    margin-bottom 7px
    opacity 0.6

  .quantity-complete
    font-size 17px // same size as piece title on pieces page
    font-weight 400
    margin-bottom 10px

  .no-challenges
    margin-top 100px
