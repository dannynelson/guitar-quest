.guitar-quest-login
  .guitar-background-white
    .container
      .row
        .col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
          .login-panel.panel.panel-default
            .panel-body.padded-panel
              h4.text-center.title Log in to your account
              uib-alert(type='danger' ng-if='ctrl.error' close='ctrl.error = null') {{ctrl.error}}
              form(ng-submit='ctrl.login()')
                input.form-control(id='inputEmail' type='email' placeholder='email' ng-model='ctrl.form.email')
                input.form-control(type='password' placeholder='password' ng-model='ctrl.form.password')
                button.action-btn.btn.btn-primary.btn-block(type='submit') Log in
