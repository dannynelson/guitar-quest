  text-align center
  font-size 16px

  .divider
    margin-top 15px
    margin-bottom 15px

  .pricing-name
    // color #2D9434
    font-size: 14px;
    text-transform uppercase
    padding-top 10px
    padding-bottom 10px
    font-weight: 500

