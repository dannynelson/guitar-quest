// Add this to dynamically hiding / showing loader that has animation on it
// https://github.com/angular/angular.js/issues/8224
// http://jsfiddle.net/PvS8k/4/
.loader.ng-animate
  -webkit-animation: none 0s

.full-page-loader
  margin-top 50px

.guitar-background-white
  margin-top -23px
  margin-bottom -23px
