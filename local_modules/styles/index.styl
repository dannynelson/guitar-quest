.btn
  font-weight 500
  -webkit-box-shadow: 1px 1px 4px rgba(0,0,0,0.1);
  box-shadow: 1px 1px 4px rgba(0,0,0,0.1);

.input-row
  margin-bottom 5px

.input-helper-text
  color #A7A7A7
  font-size 12px
  margin-top 2px

.btn-flat
  color #2196F3
  text-transform uppercase
  cursor pointer
  font-weight 500
  font-size 13px
  &:hover
    text-decoration none
  &:focus
    text-decoration none

.panel-footer-white
  background-color white

// Pricing
