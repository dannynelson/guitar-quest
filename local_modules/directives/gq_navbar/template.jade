.gq-navbar
  nav.navbar.navbar-default.navbar-static-top
    .container
      .navbar-container
        //- .navbar-container
        .navbar-header
          button.navbar-toggle(type='button', ng-click='navbarCtrl.navbarVisible = !navbarCtrl.navbarVisible')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(ui-sref='guitarQuest.landing') GuitarQuest
        .collapse.navbar-collapse(ng-class="{'navbar-menu-show': navbarCtrl.navbarVisible}")
          ul.nav.navbar-nav(
            ng-click='navbarCtrl.navbarVisible = !navbarCtrl.navbarVisible'
            ng-if='navbarCtrl.isLoggedIn()'
          )
            li.pieces(ng-class="{active: navbarCtrl.stateIncludes('guitarQuest.pieces')}")
              a(ui-sref='guitarQuest.pieces')
                span Pieces
                span.badge.link-badge.badge-warning(ng-if='navbarCtrl.notificationCount.piece') {{navbarCtrl.notificationCount.piece}}

            li(ng-class="{active: navbarCtrl.stateIncludes('guitarQuest.quests')}")
              a(ui-sref='guitarQuest.quests')
                span Quests
                span.badge.link-badge.badge-warning(ng-if='navbarCtrl.notificationCount.quest') {{navbarCtrl.notificationCount.quest}}

            li(ng-class="{active: navbarCtrl.stateIncludes('guitarQuest.submittedPieces')}")
              a(ui-sref='guitarQuest.submittedPieces') Submitted

          ul.nav.navbar-nav.navbar-right(ng-if='!navbarCtrl.isLoggedIn()')
            li(ng-class="{active: navbarCtrl.stateIncludes('guitarQuest.pricing')}")
              a(ui-sref='guitarQuest.pricing') Pricing
            li(ng-class="{active: navbarCtrl.stateIncludes('guitarQuest.login')}")
              a(ui-sref='guitarQuest.login') Log in
            li(ng-class="{active: navbarCtrl.stateIncludes('guitarQuest.createAccount')}")
              a(ui-sref='guitarQuest.createAccount') Sign up

          ul.nav.navbar-nav.navbar-right(ng-if='navbarCtrl.isLoggedIn()')
            li(dropdown)
              a.icon-link(dropdown-toggle)
                i.fa.fa-user
                i.caret
              ul.dropdown-menu(role="menu" aria-labelledby="single-button")
                li(role="menuitem")
                  a(href="#" ui-sref='guitarQuest.account') Account
                  a(href="#" ng-click='navbarCtrl.logout()') Logout
          .navbar-text.navbar-right(ng-if='navbarCtrl.isLoggedIn()')
            //- span.credit-summary.label.label-warning $20 Credit
            span.text-warning {{navbarCtrl.getUser().credits}} credits
            span.level-summary Level {{navbarCtrl.getUser().level}}

